<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">



    <TextView
        android:id="@+id/extras"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Extras"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"></TextView>

    <ImageView
        android:id="@+id/closeIcon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/close"
        android:layout_margin="16dp"
        android:layout_alignParentRight="true"></ImageView>
    <View
        android:id="@+id/viewPage"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_below="@+id/extras"
        android:background="@color/colorGray"></View>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemList"
        android:layout_below="@+id/viewPage"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp"></androidx.recyclerview.widget.RecyclerView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/menuTV"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textSize="14dp"
        android:textColor="@color/colorWhite"
        android:text="Add to menu"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/home_radius_button_orange"></TextView>

    <TextView
        android:id="@+id/resetTV"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textSize="14dp"
        android:textColor="@color/colorWhite"
        android:text="Reset Fields"
        android:textAllCaps="true"
        android:layout_margin="8dp"
        android:gravity="center"
        android:background="@drawable/home_radius_button_orange"></TextView>
</LinearLayout>
</RelativeLayout>