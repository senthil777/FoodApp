<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:background="@drawable/login_radius_back_white"
    android:paddingBottom="12dp"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="16dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Add Note"
            android:textColor="@color/colorBlack"
            android:padding="4dp"></TextView>
        <ImageView
            android:id="@+id/closeIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="15dp"
            android:src="@drawable/close"
            android:visibility="gone"
            android:layout_alignParentRight="true"></ImageView>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:visibility="gone"
        android:background="@color/colorGray"></View>
    <EditText
        android:id="@+id/noteEdit"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:hint="Add notes"
        android:gravity="top"
        android:padding="8dp"
        android:textSize="14dp"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorGray"
        android:inputType="textMultiLine"
        android:background="@drawable/home_button_gray_view"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancelText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="No"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"
            android:textSize="14dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:layout_margin="6dp"
            android:background="@drawable/login_radius_button_gray"
            android:textColor="@color/colorWhite"></TextView>
        <TextView
            android:id="@+id/submitText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="yes"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="14dp"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:background="@drawable/login_radius_button_orange"
            android:textColor="@color/colorWhite"></TextView>

    </LinearLayout>

</LinearLayout>