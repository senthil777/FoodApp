<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/paymentLayout"
    android:layout_margin="4dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/select_address_radio_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:buttonTint="@color/redColor"
        android:clickable="false"
        android:gravity="center"></RadioButton>

    <RadioButton
        android:id="@+id/select_address_radio_buttonGreen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:buttonTint="@color/colorGreen"
        android:clickable="false"
        android:gravity="center"></RadioButton>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addressNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="14dp"></TextView>
        <TextView
            android:id="@+id/addressTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:layout_marginTop="-2dp"
            android:textSize="12dp"></TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/delete"></ImageView>

</LinearLayout>