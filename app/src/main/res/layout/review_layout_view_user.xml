<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImg"
            android:layout_width="32dp"
            android:layout_height="32dp"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/userImg"
            android:textColor="@color/colorBlack"
            android:text="Order #1085354723 (Bill total: € 250)"></TextView>

    </RelativeLayout>

    <TextView
        android:id="@+id/orderId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/colorBlack"
        android:text="Order #1085354723 (Bill total: € 250)"></TextView>

    <TextView
        android:id="@+id/orderSubDelivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/colorBlack"
        android:text="Delivered Apr 01, 2020 item"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/orderSubItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"

            android:textColor="@color/colorBlack"
            android:text="Item:"></TextView>

        <TextView
            android:id="@+id/orderSubItemValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"

            android:layout_marginLeft="12dp"
            android:textColor="@color/colorBlack"
            android:text="Death by chocolate, brownie fudge sundae"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/orderSubRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginTop="14dp"
            android:textColor="@color/colorBlack"
            android:text="Rating:"></TextView>

        <LinearLayout
            android:id="@+id/ratingLayout"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/round_red">
            <ImageView
                android:id="@+id/starImage"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/star"></ImageView>
        <TextView
            android:id="@+id/orderSubRatingValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="3"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorWhite"></TextView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/orderSubDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/colorBlack"
        android:text="TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT"></TextView>

    <TextView
        android:id="@+id/orderIdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/colorBlack"
        android:visibility="gone"
        android:text="VIEW ORDER DETAILS"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/colorGray"></View>

</LinearLayout>