<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/holeLayout"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/listRR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/dishImg"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="fitXY"
            android:layout_marginTop="8dp"></ImageView>

        <TextView
            android:id="@+id/dishTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:textSize="14dp"
            android:singleLine="true"
            android:layout_marginRight="48dp"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/dishImg"></TextView>

        <LinearLayout
            android:id="@+id/ratingLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/dishImg"
            android:layout_below="@+id/dishTitle"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ratingImage"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/star"
                android:padding="3dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/round_red"></ImageView>

            <TextView
                android:id="@+id/ratingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:textSize="12dp"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@+id/dishImg"></TextView>


        </LinearLayout>

        <TextView
            android:id="@+id/dishDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="2dp"
            android:textSize="12dp"
            android:singleLine="true"
            android:layout_marginRight="48dp"
            android:textColor="@color/colorBlack"
            android:layout_below="@+id/ratingLinearLayout"
            android:layout_toRightOf="@+id/dishImg"></TextView>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="@color/colorGray"
            android:layout_margin="8dp"
            android:layout_below="@+id/dishDescription"
            android:layout_toRightOf="@+id/dishImg"></View>

        <TextView
            android:id="@+id/dishTiming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textSize="12dp"
            android:visibility="gone"
            android:textColor="@color/colorBlack"
            android:layout_below="@+id/dishDescription"
            android:layout_toRightOf="@+id/dishImg"></TextView>

        <LinearLayout
            android:id="@+id/openLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorGray"
            android:layout_below="@+id/view"
            android:layout_toRightOf="@+id/dishImg">
        <TextView
            android:id="@+id/dishOpen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            ></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
        <TextView
            android:id="@+id/viewAllOutlets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textSize="12dp"
            android:text="view all outlets"
            android:textColor="@color/colorRed"></TextView>

        <ImageView
            android:id="@+id/dishArrow"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:scaleType="fitXY"
            android:rotation="270"
            android:src="@drawable/arrow_down"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/viewAllOutlets"></ImageView>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/dishPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="4dp"
            android:textSize="12dp"
            android:textColor="@color/colorGray"
            android:layout_below="@+id/openLayout"
            android:layout_toRightOf="@+id/dishImg"></TextView>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="@color/colorGray"
            android:layout_margin="8dp"
            android:layout_below="@+id/dishPrice"
            android:layout_toRightOf="@+id/dishImg"></View>

        <TextView
            android:id="@+id/ratingTV"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:textSize="12dp"
            android:visibility="gone"
            android:textColor="@color/colorWhite"
            android:background="@drawable/home_radius_button_orange"
            android:layout_alignParentRight="true"></TextView>
    </RelativeLayout>

</LinearLayout>