<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:id="@+id/cardView"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:id="@+id/viewStoreImg"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:scaleType="fitXY"></ImageView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:background="#2F000000"></RelativeLayout>
                <TextView
                    android:id="@+id/viewOffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50% OFF"
                    android:textSize="12dp"
                    android:layout_margin="4dp"
                    android:textColor="@color/colorWhite"></TextView>

                <ImageView
                    android:id="@+id/viewIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/favorite"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    android:layout_alignParentRight="true"
                    ></ImageView>

                <TextView
                    android:id="@+id/viewRating"
                    android:layout_width="30dp"
                    android:layout_height="18dp"
                    android:text="4.4"
                    android:textSize="10dp"
                    android:layout_margin="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/home_radius_button_orange"
                    android:textColor="@color/colorWhite"></TextView>


            </RelativeLayout>

            <TextView
                android:id="@+id/viewStoreName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:layout_marginRight="24dp"
                android:singleLine="true"
                android:layout_marginLeft="6dp"
                android:text="Kritunga Restaurant"></TextView>

            <TextView
                android:id="@+id/viewStoreDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:layout_marginLeft="6dp"
                android:textSize="10dp"
                android:singleLine="true"
                android:text="South Indian, Chinese, Chat, North Indian..."></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:layout_margin="4dp"
                android:background="#c1c1c1"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/ratingImage"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_red"
                    android:padding="3dp"
                    android:src="@drawable/star"></ImageView>

                <TextView
                    android:id="@+id/viewRatingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.0"
                    android:textSize="12dp"
                    android:layout_toRightOf="@+id/ratingImage"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView
                    android:id="@+id/dot1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textSize="36dp"

                    android:layout_marginTop="-30dp"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/viewRatingValue"
                    android:textColor="@color/colorGray"></TextView>

                <TextView
                    android:id="@+id/viewDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40 mins"
                    android:textSize="12dp"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/dot1"
                    android:textColor="@color/colorBlack"></TextView>


            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>