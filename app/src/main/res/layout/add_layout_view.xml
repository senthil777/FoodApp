<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/addPersonGroupList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <CheckBox
            android:id="@+id/personNameCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></CheckBox>

        <TextView
            android:id="@+id/personName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_margin="4dp"
            android:layout_toRightOf="@+id/personNameCheck"
            android:textColor="@color/colorBlack"
            android:textSize="14dp"></TextView>

        <ImageView
            android:id="@+id/deleteIMG"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="6dp"
            android:src="@drawable/edit"
            android:visibility="visible"
            android:layout_alignParentRight="true"></ImageView>
        <ImageView
            android:id="@+id/editIMG"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="6dp"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/deleteIMG"
            android:src="@drawable/edit"></ImageView>

        <TextView
            android:id="@+id/personMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/personNameCheck"
            android:layout_below="@+id/personName"
            android:textColor="@color/colorBlack"
            android:textSize="14dp"></TextView>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/colorGray"></View>

</LinearLayout>