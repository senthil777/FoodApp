<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/login_radius_back_white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tableLA"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Add Group"
            android:textAllCaps="true"
            android:textSize="16dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"></TextView>

        <ImageView
            android:id="@+id/closeIMG"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:src="@drawable/close"></ImageView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/colorBlack"></View>
    <EditText
        android:id="@+id/enterUserName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:paddingLeft="12dp"
        android:textColorHint="@color/colorGray"
        android:textSize="14dp"
        android:inputType="text"
        android:background="@drawable/home_cal_black"
        android:textColor="@color/colorBlack"
        android:hint="Group Name"></EditText>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/CancelTV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="NO"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:textAllCaps="true"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/login_radius_button_gray"
            ></TextView>

        <TextView
            android:id="@+id/submitTV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="YES"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:textAllCaps="true"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/login_radius_button_orange"
            ></TextView>

    </LinearLayout>

</LinearLayout>