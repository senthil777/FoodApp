<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:id="@+id/signInLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/loginText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Order Delete"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"></TextView>

            </LinearLayout>

            <ImageView
                android:id="@+id/closeIV"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/close"
                android:padding="2dp"
                android:layout_alignParentRight="true"
                android:layout_margin="16dp"></ImageView>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="@color/colorGray"></View>



    </LinearLayout>

    <TextView
        android:id="@+id/textImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:textSize="16dp"
        android:text="Are You Sure Delete this Order!"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tableLA2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="6dp"
            android:text="NO"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"

            android:background="@drawable/home_radius_button_orange"></TextView>

        <TextView
            android:id="@+id/tableLA1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="6dp"
            android:text="Yes"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:background="@drawable/home_radius_button_green"></TextView>



    </LinearLayout>



</LinearLayout>