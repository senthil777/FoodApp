<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_1"
    android:orientation="vertical"
    tools:context=".Activity.LoginActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="#D3000000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.15"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"

            android:gravity="center">

            <ImageView
                android:layout_width="108dp"
                android:layout_height="96dp"
                android:src="@drawable/logo_lie"
                android:padding="8dp">

            </ImageView>



        </LinearLayout>
        <TextView
            android:id="@+id/signINLB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:textColor="@color/colorWhite"
            android:text="@string/LoginActivity_Sign_In"></TextView>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:gravity="center"
            android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="12dp"
            android:orientation="vertical"

            android:gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/userImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/my_account"></ImageView>

                <EditText
                    android:id="@+id/enterUserName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColorHint="@color/colorWhite"
                    android:textSize="14dp"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorWhite"
                    android:hint="@string/login_name"></EditText>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:background="@color/colorWhite"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/password"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/password"></ImageView>

                <EditText
                    android:id="@+id/enterPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:text=""
                    android:inputType="textPassword"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:hint="@string/login_password"></EditText>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:background="@color/colorWhite"></View>

            <TextView
                android:id="@+id/loginButton"
                android:layout_width="125dp"
                android:layout_height="48dp"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="6dp"
                android:text="@string/login_button"
                android:textColor="@color/colorWhite"
                android:background="@drawable/login_radius_button_orange"></TextView>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/accountTV"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textColor="@color/colorWhite"
                android:layout_weight="0.85"
                android:gravity="left"
                android:paddingTop="16dp"
                android:textSize="13dp"
                android:text="@string/login_account"></TextView>

            <TextView
                android:id="@+id/forgetTV"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textColor="@color/colorWhite"
                android:layout_weight="1.15"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:paddingTop="16dp"
                android:textSize="13dp"
                android:text="@string/login_forget_password"></TextView>
        </RelativeLayout>




    </LinearLayout>
        <LinearLayout
            android:id="@+id/visible"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:orientation="horizontal"
            android:visibility="gone"></LinearLayout>
    </LinearLayout>


</LinearLayout>