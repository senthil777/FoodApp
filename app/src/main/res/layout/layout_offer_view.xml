<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:id="@+id/viewStoreImg"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/recommended"></ImageView>

                <ImageView
                    android:id="@+id/viewOffer"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:visibility="gone"
                    android:src="@drawable/favorite"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4dp"></ImageView>

                <TextView
                    android:id="@+id/viewRating"
                    android:layout_width="36dp"
                    android:layout_height="27dp"
                    android:text="4.4"
                    android:textSize="10dp"
                    android:layout_margin="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:background="@drawable/home_radius_button_orange"
                    android:textColor="@color/colorWhite"></TextView>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/viewStoreName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_weight="0.5"
                android:textSize="16dp"
                android:layout_marginLeft="6dp"
                android:text="Kritunga Restaurant"></TextView>
            <TextView
                android:id="@+id/offerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/redColor"
                android:textSize="12dp"
                android:gravity="right"
                android:layout_weight="1.5"
                android:visibility="gone"
                android:layout_marginRight="6dp"
                android:text="50 % OFF"></TextView>
            </LinearLayout>



            <TextView
                android:id="@+id/viewStoreDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:layout_marginLeft="6dp"
                android:textSize="12dp"
                android:singleLine="true"
                android:text="South Indian, Chinese, Chat, North Indian..."></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:layout_margin="4dp"
                android:background="#c1c1c1"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/ratingImage"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star"
                    android:padding="3dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_red"></ImageView>

                <TextView
                    android:id="@+id/viewRatingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.0"
                    android:textSize="12dp"
                    android:layout_toRightOf="@+id/ratingImage"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView
                    android:id="@+id/viewDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=".  40 mins"
                    android:textSize="12dp"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/viewRatingValue"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView
                    android:id="@+id/viewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=".  200 for two"
                    android:textSize="10dp"
                    android:visibility="gone"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/viewDistance"
                    android:textColor="@color/colorGray"></TextView>


            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>