<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <ImageView
            android:id="@+id/profileImg"
            android:layout_width="50dp"
            android:layout_height="50dp"></ImageView>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/profileImg"
            android:textColor="@color/colorBlack"></TextView>

        <TextView
            android:id="@+id/userNameDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/userName"
            android:textColor="@color/colorBlack"></TextView>

        <TextView
            android:id="@+id/userDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="Cras sit amet nibh libero, in gravida nulla. Nulla vel metus scelerisque ante sollicitudin. Cras purus odio, vestibulum in vulputate at, tempus viverra turpis. Fusce condimentum nunc ac nisi vulputate fringilla. Donec lacinia congue felis in faucibus."
            android:layout_marginLeft="8dp"
            android:maxLines="2"
            android:layout_marginRight="75dp"
            android:layout_below="@+id/userName"
            android:layout_toRightOf="@+id/profileImg"
            android:textColor="@color/colorBlack"></TextView>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toLeftOf="@+id/reviewTV"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/reviewTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="5/5"
            android:layout_marginLeft="8dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBlack"></TextView>
    </RelativeLayout>

</LinearLayout>